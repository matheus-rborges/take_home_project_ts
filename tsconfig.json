{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": ".build",
        "baseUrl": "./",
        "rootDir": "./",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["src/@types", "node_modules/@types"]
    }
}
